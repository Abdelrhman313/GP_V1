@model IEnumerable<Gp_V1.Models.Job>

@{
    ViewBag.Title = "ShowPublishedJobs";
}

<h2 class="text-primary mb-3">Published Jobs</h2>

<p>
    @Html.ActionLink("Create New Job", "Create", null, new { @class = "btn btn-success" })
</p>

@if (Model.Count() == 0)
{
    <div class="alert alert-danger">No Published Jobs Yet!</div>
}
else
{
    <table class="table table-responsive table-bordered">
        <tr>
            <th>
                Job Title
            </th>
            <th>
                Job Category
            </th>
            <th>
                Job Type
            </th>
            <th>
                Job Content
            </th>
            <th>
                Job State
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobCategory.JobCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobType.JobTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobDescription).ToString().Substring(0, 10) ....
        </td>
        @if (item.JobState == true)
        {
            <td>
                <button type="button" class="btn btn-success">Open</button>
            </td>
        }
        else
        {
            <td>
                <button type="button" class="btn btn-danger">Closed</button>
            </td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
        }
    </table>
}
